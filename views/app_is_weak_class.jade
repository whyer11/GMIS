block content
  script(src='../../javascripts/app_is_weak_class.js')
  div.container
    div.navbar-wrapper
      nav.navbar.navbar-default
        div.container
          div.navbar-header
            a.navbar-brand 强弱连接管理
  div.container
    div.row
      div.col-md-3
        div.siderbar
          ul#applist
            each val in app_info
              li
                a.app-unselected(data-appid=val.APP_ID)=val.APP_NAME
      div.col-md-3.offset1
