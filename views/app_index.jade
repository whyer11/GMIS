extends layout

block content
  div.container
    h1.pull-left.header-title 所有的Apps
  div.container
    div.gridly
      each val in appinfo
        div.brick.small
          a.platform-app(href='/app/'+val.APP_ID+'/view')=val.APP_NAME
  script.
    $('.gridly').gridly({
      base: 60, // px
      gutter: 20, // px
      columns: 12
    })